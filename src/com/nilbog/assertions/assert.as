package com.nilbog.assertions {            						/**	 * Simple assertion mechanism.	 * 	 * @param assertion Boolean, an expression to evaluate	 * @param message	String, description of what's being asserted  as true	 * @param errorType		Class, an error type to throw on failure	 * 	 * @throws errorType	 */    public function assert( assertion:Boolean, message:String = null, errorType:Class = null ):void    {    	//trace(doAssert(assertion, message, errorType));    	doAssert(assertion, message, errorType);    }}import com.nilbog.errors.AssertionFailureError;function doAssert( assertion:Boolean, message:String=null, errorType:Class=null) :String{	if (assertion != true)	{		// set default errorType		if (errorType == null)		{			errorType = AssertionFailureError;		}				throw new errorType( message );	}	return "Assertion passed: " + message;}