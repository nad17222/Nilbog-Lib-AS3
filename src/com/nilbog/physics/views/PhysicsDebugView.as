package com.nilbog.physics.views {	import flash.geom.Rectangle;	import com.nilbog.physics.models.PhysicsModel;	/**	 * A view strongly tied to the box2d physics model. The box2d world writes	 * directly to it.	 * 	 * @author jmhnilbog	 */	public class PhysicsDebugView extends PhysicsView	{		// draw shapes associated with each body		public static const DRAW_SHAPES:Number = 0x0001;				// draw the joints between them		public static const DRAW_JOINTS:Number = 0x0002;				/**		 * Constructor.		 * 		 * @param	m	PhysicsModel		 * @param	area	Rectangle		 * @param	scale	Number (defaults to 1, meaning 1px = 1m)		 * @param	fillAlpha	Number (defaults to .5)		 * @param	lineThickness	Number (defaults to 1)		 */		public function PhysicsDebugView( m:PhysicsModel, scale:Number=1, fillAlpha:Number=.6, lineThickness:Number=1 )		{			super( m, m.worldSize, scale );						log.trace("%s(%s)", "PhysicsDebugView", arguments.join(", "));						var m:PhysicsModel = getModel() as PhysicsModel;			m.drawDebuggingData(this, scale, DRAW_SHAPES | DRAW_JOINTS, fillAlpha, lineThickness);		}		}		}