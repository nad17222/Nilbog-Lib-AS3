package com.nilbog.physics.views {	import com.nilbog.mvc.AbstractView;	import com.nilbog.physics.models.PhysicsModel;	import flash.geom.Rectangle;	/**	 * Basc Physics view class.	 * 	 * @author jmhnilbog	 */	public class PhysicsView extends AbstractView	{		protected var _scale:Number;		protected var _area:Rectangle;				/**		 * Constructor.		 * 		 * @param	m	PhysicsModel		 * @param	scale	Number (defaults to 1, meaning 1px = 1 meter)		 */		public function PhysicsView( m:PhysicsModel, area:Rectangle, scale:Number=1 )		{			super( m );						log.trace("%s(%s)", "PhysicsView", arguments.join(", "));						_scale = scale;			this.area = area;		}				/**		 * Gets the view's scale in pixels per meter.		 * 		 * return Number		 */		public function get scale() :Number		{			return _scale;		}				public function get area() :Rectangle		{			return new Rectangle(_area.x, _area.y, _area.width, _area.height);		}				public function set area(v:Rectangle) :void		{			_area = v;		}	}}