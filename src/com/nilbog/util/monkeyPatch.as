package com.nilbog.util {	import flash.utils.describeType;			/**	 * @author markhawley	 * 	 * Adds/redefines dynamic methods and properties at runtime. Works with	 * classes or individual objects.	 * 	 * @param	obj	* Object to patch	 * @param	methodName	String name to call function	 * @param	func	Function, the 	 */	public function monkeyPatch( obj:*, methodName:String, func:Function=null ) :void	{		// can we patch it?		var objDescription:XML = describeType(obj);				if (objDescription.@isDynamic != "true")		{			throw new Error("Cannot patch non-dynamic object.");		}		var t:*;				if (obj is Class)		{			t = obj.prototype;					}		else		{			t = obj;			} 				if (func == null)		{			t[methodName] = null;			delete t[methodName];			return;		}				var theCall:Function = function (...rest) :*		{			return func.apply(obj, rest);		};				t[methodName] = theCall;	}}