package com.nilbog.sfx.lensflare {	import com.greensock.TweenLite;	import flash.display.Sprite;	import flash.events.TimerEvent;	import flash.geom.Rectangle;	import flash.utils.Timer;	/**	 * @author markhawley	 */	public class LensFlareTest extends Sprite 	{		private var flare:LensFlare;		private var timer:Timer;		private var lightSource:Object = {x: 0, y: 0};		public function LensFlareTest()		{			// NOTE: depends on Flare1, Flare2, Halo1, Halo2 being			// in the library!			flare = new LensFlare( new Rectangle( 0, 0, stage.stageWidth, stage.stageHeight ), new LensFlareElement( "Flare1" ), new LensFlareElement( "Halo1" ), new LensFlareElement( "Flare2" ), new LensFlareElement( "Halo1" ), new LensFlareElement( "Halo2" ), new LensFlareElement( "Halo1" ), new LensFlareElement( "Flare2" ), new LensFlareElement( "Halo2" ) );						addChild( flare );						flare.x = stage.stageWidth / 2;			flare.y = stage.stageHeight / 2;						timer = new Timer( 1000 );			timer.addEventListener( TimerEvent.TIMER, onTimeout );			timer.start( );						flare.setLightSource( lightSource );		}		private function onTimeout( event:TimerEvent = null ):void		{			TweenLite.to( lightSource, 1, { 				x: Math.random( ) * stage.stageWidth, y: Math.random( ) * stage.stageHeight, onUpdate: update			} );		}		private function update():void		{			flare.draw( );		}	}}