package com.nilbog.util {	import asunit.framework.TestCase;	import com.nilbog.util.font.FontUtil;	/**	 * @author mark hawley	 */	public class FontUtilTest extends TestCase 	{				public function FontUtilTest(testMethod:String = null)		{			super(testMethod);		}				protected override function setUp() :void		{		}				protected override function tearDown() :void		{		}				public function testIsFixedWidth() :void		{						assertTrue("Detected fixed width font.", FontUtil.isFixedWidth("_typewriter"));			assertFalse("Detected variable width font.", FontUtil.isFixedWidth("_serif"));		}	}}